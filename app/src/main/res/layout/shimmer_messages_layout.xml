                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#B3B3B3"
                android:text="Hello World"/>
            <TextView
                android:id="@+id/user_message_date"
